<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/e_cmapp_logo" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_message"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DA000000"
                android:text="@string/user_singin"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <EditText
                android:id="@+id/edtusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#818181"
                android:backgroundTintMode="src_over"
                android:breakStrategy="simple"
                android:minHeight="100dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password_singin"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <EditText
                android:id="@+id/edtclave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#818181"
                android:backgroundTintMode="src_over"
                android:breakStrategy="simple"
                android:minHeight="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <Button
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="@string/login_btn"
                android:textSize="40dp"
                android:layout_margin="200dp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>